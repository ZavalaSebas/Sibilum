<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Paleta noche suave -->
    <Color x:Key="BackgroundDark">#1E1E2E</Color>
    <Color x:Key="Primary">#CBA6F7</Color>
    <Color x:Key="Secondary">#F5C2E7</Color>
    <Color x:Key="Detail">#A6E3A1</Color>
    <Color x:Key="TextLight">#A6ADC8</Color>
    <Color x:Key="Error">#F38BA8</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="DetailBrush" Color="{StaticResource Detail}" />
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLight}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}" />

</ResourceDictionary>
